#!/bin/sh

ABORT=no

check_cmake() {
	(cmake --version) < /dev/null > /dev/null 2>&1 || {
		echo "error: cmake 2.6 must be present to configure and install MADlib"
		ABORT=yes
	}
}

check_cmake
test "$ABORT" = yes && exit -1

mkdir -p build
cd build
rm -f CMakeCache.txt
cmake -DCMAKE_PREFIX_PATH="/Library/UNIX/postgresql" ..
